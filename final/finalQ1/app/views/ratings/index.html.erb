<p id="notice"><%= notice %></p>

<h1>Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Series</th>
      <th>Viewership</th>
      <th>Rating</th>
      <th>Share</th>
      <th>Date</th>
      <th>Network</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.series %></td>
        <td><%= rating.viewership %></td>
        <td><%= rating.rating %></td>
        <td><%= rating.share %></td>
        <td><%= rating.date %></td>
        <td><%= rating.network %></td>
        <td><%= link_to 'Show', rating %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rating', new_rating_path %>
